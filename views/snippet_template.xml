<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <template id="most_viewed_snippet" name="Most Viewed Product">
   <section class="container dynamic_snippet_blog">
       <div class="row">
           <div class="col-md-12">
               <h1>Most Viewed Product</h1>
<!--               Total Products Sold: <span id="total_sold"/>-->
           </div>
       </div>
   </section>
</template>
    <template id="external_snippets" inherit_id="website.snippets" priority="20">
   <xpath expr="//div[@id='snippet_effect']//t[@t-snippet][last()]" position="after">
       <t t-snippet="web_recently_viewed_product.most_viewed_snippet"/>
   </xpath>
</template>
    </odoo>